<div class="mb-3">
    <div class="row">
        <div class="col-sm-6">
            <label for="currency" class="form-label">Currency</label>
            <input type="text" class="form-control" id="currency" placeholder="EUR">
        </div>
        <div class="col-sm-6">
            <label for="amount" class="form-label">Amount</label>
            <input type="number" class="form-control" id="amount" value="1000">
        </div>
    </div>
</div>
<div class="row mb-3">
    <div class="col-sm-6">
        <div>
            <label for="countryCode" class="form-label">Country Code</label>
            <input type="text" class="form-control" id="countryCode" placeholder="NL">
        </div>
    </div>
    <div class="col-sm-6">
        <div>
            <label for="shopperLocale" class="form-label">Shopper Locale</label>
            <input type="text" class="form-control" id="shopperLocale" placeholder="en-US">
        </div>
    </div>
</div>

<div class="mb-3">
    <label for="shopperReference" class="form-label">Shopper Reference</label>
    <input type="text" class="form-control" id="shopperReference"
        aria-describedby="shopperReferenceHelp">
    <div id="shopperReferenceHelp" class="form-text">Enter to get stored payment methods or save a new payment method</div>
</div>      
<div class="mb-3">
    <label for="reference" class="form-label">Merchant Reference</label>
    <input type="text" class="form-control" id="reference"
        aria-describedby="referenceHelp">
    <div id="referenceHelp" class="form-text">If blank, reference will be auto-generated</div>
</div>     